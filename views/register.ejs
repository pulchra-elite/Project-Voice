<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Sign in</title>
  <!-- Custom Style Sheet -->
  <link rel="stylesheet" href="./css/style_register.css">
  <!-- Bootstrap CDN CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootswatch/4.1.1/cerulean/bootstrap.min.css" rel="stylesheet" integrity="sha384-0Mou2qXGeXK7k/Ue/a1hspEVcEP2zCpoQZw8/MPeUgISww+VmDJcy2ri9tX0a6iy" crossorigin="anonymous">
</head>
<body>
  <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light" style="background-color: #e3f2fd;">
        <a class="navbar-brand" href="#"></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item active">
                <a class="nav-link" href="/">Home<span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item">
                <a class="nav-link"href="/history">History</a>
              </li>
            </ul>
          </div>

          <form class="form-inline">
            <% if (!currentUser){ %>
                <!-- link to the Login-->
                <li class="nav-item"><a class="nav-link" href="/register">Sign In</a></li>
            <% } else{ %>
                <!-- link to the Logout-->
                <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
            <% } %>
          </form>
        </nav>

  </header>
  <div class="container">

    <div class="col-sm-6 col-sm-offset-3">

      <h2>Sign up form</h2>

      <form action="/register" method="POST">
        <div class="form-group">
          <label>username</label>
        <input type="text" name="username" placeholder="username">
        </div>

        <div class="form-group">
          <label>Password</label>
          <input type="password" name="password" placeholder="password">
        </div>

        <button type="submit" class="btn btn-warning btn-lg">Signup</button>
      </form>

      <hr>

      <h2> </h2>
      <h4>Already have an account?</h4>
      <h2>Login here</h2>

      <form action="/login" method="POST">
        <div class="form-group">
          <label>username</label>
        <input type="text" name="username" placeholder="username">
        </div>

        <div class="form-group">
          <label>Password</label>
          <input type="password" name="password" placeholder="password">
        </div>

        <button type="submit" class="btn btn-warning btn-lg">Login</button>
      </form>

  </body>
